{
  "name": "granola-cli",
  "version": "0.1.0",
  "description": "Fast CLI for Granola meeting notes, transcripts, and search",
  "author": "Aaron Vanston",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aaronvanston/granola-cli.git"
  },
  "homepage": "https://github.com/aaronvanston/granola-cli#readme",
  "bugs": {
    "url": "https://github.com/aaronvanston/granola-cli/issues"
  },
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "granola": "dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./utils": {
      "types": "./dist/lib/token.d.ts",
      "import": "./dist/lib/token.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "bun build ./src/cli.ts --outdir ./dist --target node && tsc --emitDeclarationOnly",
    "build:binary": "bun build ./src/cli.ts --compile --outfile ./dist/granola",
    "dev": "bun run src/cli.ts",
    "test": "bun test",
    "lint": "biome check src/",
    "lint:fix": "biome check --write src/",
    "format": "biome format --write src/",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "bun run build"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.0",
    "@types/bun": "latest",
    "@types/node": "^22.0.0",
    "typescript": "^5.7.0"
  },
  "engines": {
    "node": ">=20",
    "bun": ">=1.0.0"
  },
  "keywords": [
    "granola",
    "meeting-notes",
    "meetings",
    "transcription",
    "transcript",
    "notes",
    "cli",
    "ai",
    "productivity",
    "bun"
  ]
}
